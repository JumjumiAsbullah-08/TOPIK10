PROCEDURE BALING(X0,Y0,X1,Y1,X2,Y2,X3,Y3,X4,Y4,C:INTEGER);
BEGIN
 SETCOLOR(C);
 LINE(X0,Y0,X1,Y1);
 LINE(X1,Y1,X2,Y2);
 LINE(X2,Y2,X3,Y3);
 LINE(X3,Y3,X4,Y4);
 LINE(X4,Y4,X0,Y0);
 END;

PROCEDURE TRANS(X0,Y0,X1,Y1,X2,Y2,X3,Y3,X4,Y4,C,TX,TY:INTEGER;
 VAR XA,YA,XB,YB,XC,YC,XD,YD,XE,YE,W:INTEGER);
BEGIN
 XA:=X0+TX;
 YA:=Y0+TY;
 XB:=X1+TX;
 YB:=Y1+TY;
 XC:=X2+TX;
 YC:=Y2+TY;
 XD:=X3+TX;
 YD:=Y3+TY;
 XE:=X4+TX;
 YE:=Y4+TY;
 W:=C+2;
END;
PROCEDURE ROTASI(X0,Y0,X1,Y1,X2,Y2,X3,Y3,X4,Y4,C,TENGAH,XP,YP:INTEGER;
 VAR XA,YA,XB,YB,XC,YC,XD,YD,XE,YE,W:INTEGER);
BEGIN
 XA:=ROUND(XP+(X0-XP)*COS(TENGAH/57.3)-(Y0-YP)*SIN(TENGAH/57.3));
 YA:=ROUND(YP+(X0-XP)*SIN(TENGAH/57.3)+(Y0-YP)*COS(TENGAH/57.3));
 XB:=ROUND(XP+(X1-XP)*COS(TENGAH/57.3)-(Y1-YP)*SIN(TENGAH/57.3));
 YB:=ROUND(YP+(X1-XP)*SIN(TENGAH/57.3)+(Y1-YP)*COS(TENGAH/57.3));
 XC:=ROUND(XP+(X2-XP)*COS(TENGAH/57.3)-(Y2-YP)*SIN(TENGAH/57.3));
 YC:=ROUND(YP+(X2-XP)*SIN(TENGAH/57.3)+(Y2-YP)*COS(TENGAH/57.3));
 XD:=ROUND(XP+(X3-XP)*COS(TENGAH/57.3)-(Y3-YP)*SIN(TENGAH/57.3));
 YD:=ROUND(YP+(X3-XP)*SIN(TENGAH/57.3)+(Y3-YP)*COS(TENGAH/57.3));
 XE:=ROUND(XP+(X4-XP)*COS(TENGAH/57.3)-(Y4-YP)*SIN(TENGAH/57.3));
 YE:=ROUND(YP+(X4-XP)*SIN(TENGAH/57.3)+(Y4-YP)*COS(TENGAH/57.3));
W:=C+9;
END;

